<% const { page } = htmlWebpackPlugin.options %> 

<nav id="main-navigation" class="main-navigation" role="navigation">
  <div class="menu-button-container">
    <button id="menu-button" class="menu-button">
      <svg class="menu-icon-open" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" style="vertical-align:-.125em;-ms-transform:rotate(360deg);-webkit-transform:rotate(360deg)" viewBox="0 0 20 20" transform="rotate(360)"><path d="M3 11h14V9H3v2zm0 5h14v-2H3v2zM3 4v2h14V4H3z"/></svg>
      <svg class="menu-icon-close hidden" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" style="vertical-align:-.125em;-ms-transform:rotate(360deg);-webkit-transform:rotate(360deg)" viewBox="0 0 20 20" transform="rotate(360)"><path d="M12.12 10l3.53 3.53-2.12 2.12L10 12.12l-3.54 3.54-2.12-2.12L7.88 10 4.34 6.46l2.12-2.12L10 7.88l3.54-3.53 2.12 2.12z"/></svg>
    </button>
  </div>
  <div class="main-menu-container">
    <ul id="main-menu" class="main-menu">
      <% navigation.forEach( ({itemName, itemUrl, pageID}) => { %>
        <% const classActive = page === pageID ? 'active' : '' ; %>
        <li class="main-menu__items">
          <a href="<%= itemUrl %>" class="main-menu__links <%=classActive%>">
            <%=itemName%>
          </a>
        </li>
      <% }); %>
    </ul>
  </div>
</nav>
